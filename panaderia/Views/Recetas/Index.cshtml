
@model IEnumerable<panaderia.Models.receta>

@{
    ViewBag.Title = "Index";
}

<h2>Recetas</h2>

<p>
    <button type="button" class="btn">@Html.ActionLink("Crear", "Create")</button>
</p>
<table class="table">
    <tr>
        <th>
            Código Receta
        </th>
        <th>
            Nombre
        </th>
        <th>
            Costo Receta
        </th>
        <th>
            Valor de venta (Kl)
        </th>
        <th>
            Estado
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.costo_receta)
            </td>

            <td>
                $@Html.DisplayFor(modelItem => item.valor_venta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                <a href="@Url.Action("Index","DetalleReceta", new { id = item.Id })">Insumos</a> |

            </td>
        </tr>
    }

</table>
