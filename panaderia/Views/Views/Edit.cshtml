@model panaderia.Models.View

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>View</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        @Html.HiddenFor(model => model.nombre)

        @Html.HiddenFor(model => model.formato)

        @Html.HiddenFor(model => model.lineaId)

        @Html.HiddenFor(model => model.familiaId)

        @Html.HiddenFor(model => model.usuarioId)

        @Html.HiddenFor(model => model.stock)

        @Html.HiddenFor(model => model.precio_venta)

        @Html.HiddenFor(model => model.medidaId)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
