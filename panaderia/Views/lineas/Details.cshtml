@model panaderia.Models.linea

@{
    ViewBag.Title = "Detalles de Lineas";
}

<h2>Detalles de Linea</h2>

<div>
    <h4></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label class="control-label">Codigo Linea</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt>
            <label class="control-label">Nombre Linea</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>



    </dl>
</div>
<p>
    <button type="button" class="btn btn-default" id="btnEditar">@Html.ActionLink("Editar", "Edit", new { id = Model.Id })</button>        
    <button type="button" class="btn btn-default">@Html.ActionLink("Volver al lista", "Index")</button>
</p>
