@model IEnumerable<panaderia.Models.linea>

@{
    ViewBag.Title = "Linea de Productos";
}

<h2>Gestión de Lineas de Productos</h2>

<p>
    <button type="button" class="btn">@Html.ActionLink("Crear Nuevo", "Create")</button>
    
</p>
<table class="table">
    <tr>
        <th>
            <label class="col-md-4">Codigo</label>
            <label class="col-md-4">Nombre Linea</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <label class="col-md-4">@Html.DisplayFor(modelItem => item.Id)</label>
            <label class="col-md-4">@Html.DisplayFor(modelItem => item.nombre)</label>
                       
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
