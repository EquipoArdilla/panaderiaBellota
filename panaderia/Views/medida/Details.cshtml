@model panaderia.Models.medida

@{
    ViewBag.Title = "Detalles";
}

<h2>Detalles</h2>

<div>
    <h4>Gestión de Medidas de Productos</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label class="control-label">Código Medida</label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            <label class="control-label">Nombre Medida</label>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Volver", "Index")
</p>
