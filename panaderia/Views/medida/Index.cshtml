@model IEnumerable<panaderia.Models.medida>

@{
    ViewBag.Title = "Medida";
}

<h2>Gestión de Medidas de Productos</h2>

<p>
    <button type="button" class="btn">@Html.ActionLink("Crear", "Create")</button>
</p>
<table class="table">
    <tr>
        <th>
             <label class="col-md-4">Código Medida</label>
             <label class="col-md-4">Nombre Medida</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <label class="col-md-4">@Html.DisplayFor(modelItem => item.Id)</label>
            <label class="col-md-4">@Html.DisplayFor(modelItem => item.nombre)</label>
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
