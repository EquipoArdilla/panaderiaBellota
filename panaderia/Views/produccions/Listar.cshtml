@model IEnumerable<panaderia.Models.produccion>

@{
    ViewBag.Title = "Listar";
}

<h2>Produccion</h2>

<p>
    <button type="button" class="btn">@Html.ActionLink("Nuevo", "Create")</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Correlativo")
        </th>
        <th>
            @Html.DisplayName("Fecha Produccion")
        </th>

        <th>
            @Html.DisplayName("Receta")
        </th>
        <th>
            @Html.DisplayName("Cantidad")
        </th>
        <th>
            @Html.DisplayName("Costo Receta Kilo")
        </th>
        <th>
            @Html.DisplayName("Costo Produccion")
        </th>
        <th>
            @Html.DisplayName("Valor Venta Kilo")
        </th>
        <th>
            @Html.DisplayName("Valor venta Total")
        </th>
        <th>
            @Html.DisplayName("Rentabilida Produccion")
        </th>
        <th></th>
    </tr>

    @if (Model.Count() > 0)
    {

        foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha_produccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.receta.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.costo_receta_kilo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.costo_produccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.valor_venta_kilo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.valor_total_venta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rentabilidad_produccion)
        </td>



        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Detalle", "Details", new { id = item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
        </td>
    </tr>
            }
        }

        else
        {
            < p > No existen datos</ p >
        }
    }
</table>
