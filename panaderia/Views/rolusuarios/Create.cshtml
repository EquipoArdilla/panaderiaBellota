@model panaderia.Models.rolusuario

@{
    ViewBag.Title = "Crear Rol Usuario";
}

<h2>Gestión Rol Usuario</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Crear Rol</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                            <div class="col-md-10">
                    @Html.EditorFor(model => model.rol, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.rol, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-3">
                    <input type="submit" value="Guardar" class="btn" />
                </div>
            </div>
        </div>
}

    <div>
        <button type="button" class="btn">@Html.ActionLink("Volver", "Index")</button>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
