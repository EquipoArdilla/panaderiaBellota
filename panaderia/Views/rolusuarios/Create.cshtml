@model panaderia.Models.rolusuario

@{
    ViewBag.Title = "Crear Rol Usuario";
}

<h2>Gestión Crear Rol Usuario</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-group">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            <div class="form-group">
                <label class="col-md-3">Nombre Nuevo Rol</label>

                @Html.EditorFor(model => model.rol, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.rol, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

   


    <div class="form-group">
        <div class="col-md-offset-3">
            <input type="submit" value="Guardar" class="btn-default" />
            <button type="button" class="btn-default">@Html.ActionLink("Volver", "Index")</button>
        </div>
    </div>
   
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
