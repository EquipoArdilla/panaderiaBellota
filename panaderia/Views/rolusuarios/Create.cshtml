@model panaderia.Models.rolusuario

@{
    ViewBag.Title = "Crear Rol Usuario";
}

<h2>Gestión Crear Rol Usuario</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


<div class="form-group">
    <h4></h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        <label class="control-label col-md-2">Nombre Nuevo Rol</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.rol, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.rol, "", new { @class = "text-danger" })

        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-default" />

        </div>
    </div>
</div>
}

    <div>
        @Html.ActionLink("Volver", "Index")
    </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
