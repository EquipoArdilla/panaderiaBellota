@model IEnumerable<panaderia.Models.rolusuario>

@{
    ViewBag.Title = "Rol Usuario";
}

<h2>Gestión Rol Usuario</h2>

<p>
      <button type="button" class="btn" id="crear">@Html.ActionLink("Crear", "Create")</button>
</p>
<table class="table", id="tablarolusuarios">
    <tr>
        <th>
           
            <label class="col-md-3">Código Rol</label>
            <label class="col-md-3">Nombre Rol</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="colum1" id="cidrol">  
        @Html.DisplayFor(modelItem => item.Id)   </td>
        <td class="colum2" id="cidnombrerol">
            @Html.DisplayFor(modelItem => item.rol)  </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id })|
            @Html.ActionLink("Detalles", "Details", new { id = item.Id })|
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
