@model IEnumerable<panaderia.Models.rolusuario>

@{
    ViewBag.Title = "Rol Usuario";
}

<h2>Gestión Rol Usuario</h2>

<p>
      <button type="button" class="btn btn-default">@Html.ActionLink("Crear", "Create")</button>
</p>
<table class="table">
    <tr>
        <th>
           
            <label class="col-md-3">Código Rol</label>
            <label class="col-md-3">Nombre Rol</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
          
            <label class="col-md-3">@Html.DisplayFor(modelItem => item.Id)</label>
            <label class="col-md-3">@Html.DisplayFor(modelItem => item.rol)</label>

        </td>
        <td>
            <button type="button" class="btn btn-default">@Html.ActionLink("Editar", "Edit", new { id = item.Id })</button> |
            <button type="button" class="btn btn-default">@Html.ActionLink("Detalles", "Details", new { id = item.Id })</button> |
            <button type="button" class="btn btn-default">@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</button>
        </td>
    </tr>
}

</table>
