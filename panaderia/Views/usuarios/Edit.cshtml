@model panaderia.Models.usuario

@{
    ViewBag.Title = "Editar";
}

<h2>Gestión Editar Usuario</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4></h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)


    <!--  Tablas   -->
    <div class="form-group">
        <label class="col-md-3">Nombre Usuario</label>
        <div class="col-md-offset-2">
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <label class="col-md-3">Clave Usuario</label>
        <div class="col-md-offset-2">
            @Html.EditorFor(model => model.clave, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.clave, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <label class="col-md-3">Rol Usuario</label>
        <div class="col-md-offset-2">

            @Html.DropDownList("rolusuarioId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.rolusuarioId, "", new { @class = "text-danger" })
        </div>
    </div>



    <!--  Botones  Guardar / Volver -->

    <div class="form-group">
        <div class="col-md-offset-3">
            <input type="submit" value="Guardar" class="btn btn-default" />
            <button type="button" class="btn btn-default">@Html.ActionLink("Volver", "Index")</button>
        </div>
    </div>
</div>



}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
